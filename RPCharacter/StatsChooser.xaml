<UserControl x:Class="RPCharacter.StatsChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="200" Height="45">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Button Name="subtractButton" Content="-" Margin="10" Click="subtractButton_Click"/>
        <Button Name="addButton" Content="+" Grid.Column="2" Margin="10" Click="addButton_Click"/>
        <Label Name="statPointsLabel" HorizontalContentAlignment="Center" 
               Content="10" Grid.Column="1" Margin="10"/>
    </Grid>
</UserControl>
