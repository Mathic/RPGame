<Window x:Class="RPCharacter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="425">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="120"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Create Character" VerticalAlignment="Top" Margin="0,10,10,0" Click="Button_Click_1" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Width="100"/>

        <Expander Header="Character Information" HorizontalAlignment="Left" VerticalAlignment="Top" IsExpanded="True" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <StackPanel>
                <TextBlock Name="charInfo" TextWrapping="Wrap" Text="Create a character to show information here."/>
            </StackPanel>
        </Expander>
    </Grid>
</Window>
